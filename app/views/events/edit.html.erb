<!-- Shows in events/id#/edit -->
<h2><%= @event.title %></h2>

<p>
  <%= @event.start_time %><br />
  <%= @event.start_meridian %>
</p>

<%= form_for @event do |e| %>
  <p>
    <%= e.label :title %><br />
	<%= e.text_field :title %><br />
  </p>
<% end %>

<p>
  <%= @event.end_time %>
  <%= @event.end_meridian %>
</p>

<button>
  <%= link_to "Save", event_path(@event),
                          method: :save %>
</button>

<button>
  <%= link_to "Delete", event_path(@event),
                          method: :delete,
                          data: {confirm: 'Are you sure?'}%>
</button>
